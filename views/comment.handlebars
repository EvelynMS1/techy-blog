{{!-- Displaying Comments of Clicked Blog --}}
<div class ="commentBlog" id="blogComment" data-id ="{{blog.id}}"  data-user_id="{{blog.user_id}}">
<div class="hPBHeader">
 <h1>{{blog.title}}</h1>
<p>Posted by{{blog.user.username}} on {{blog.date}}</p>   
</div>
<p>{{blog.content}}</p>
</div>
<div class="container">
    {{#if comments}}
        {{#each comments}}
            <div class="commentBlog" data-id="{{this.id}}" data-user_id="{{this.user_id}}">
                <p>{{this.comment}}</p>
                <p>-{{this.user.username}}, {{this.date}}</p>
            </div>
           
        {{/each}}
    {{else}}
        <p>No comments have been posted yet.</p>
    {{/if}}
</div>
{{>blog_template}}

<script src="/js/comment.js"></script>